{
	"$schema": "https://schema.tauri.app/config/2",
	"build": {
		"beforeBuildCommand": "deno task build",
		"beforeDevCommand": "deno task dev",
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"resources": { "target/plugins/": "plugins/" },
		"linux": {
			"deb": {
				"desktopTemplate": "bundle/opendeck.desktop",
				"files": {
					"/etc/udev/rules.d/40-streamdeck.rules": "bundle/40-streamdeck.rules",
					"/usr/share/metainfo/opendeck.metainfo.xml": "bundle/opendeck.metainfo.xml"
				},
				"provides": ["opendeck"],
				"conflicts": ["opendeck"]
			},
			"rpm": {
				"desktopTemplate": "bundle/opendeck.desktop",
				"files": {
					"/etc/udev/rules.d/40-streamdeck.rules": "bundle/40-streamdeck.rules",
					"/usr/share/metainfo/opendeck.metainfo.xml": "bundle/opendeck.metainfo.xml"
				},
				"provides": ["opendeck"],
				"conflicts": ["opendeck"]
			}
		},
		"publisher": "Rivulus",
		"shortDescription": "Use stream controllers",
		"longDescription": "Instant control of your workflow at your fingertips, using only the power of a keyboard, smartphone or tablet",
		"category": "Productivity",
		"icon": [
			"icons/icon.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"exceptionDomain": "localhost",
			"signingIdentity": "-"
		}
	},
	"productName": "Tacto",
	"mainBinaryName": "opendeck",
	"identifier": "opendeck",
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["opendeck", "openaction", "streamdeck"]
			}
		}
	},
	"app": {
		"windows": [
			{
				"title": "Tacto",
				"fullscreen": false,
				"resizable": true,
				"width": 800,
				"height": 600,
				"minWidth": 800,
				"minHeight": 600,
				"center": true,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src * data:; frame-src http://localhost:*; script-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost https://openactionapi.github.io https://api.github.com https://raw.githubusercontent.com https://plugins.amankhanna.me;"
		},
		"withGlobalTauri": true
	}
}
